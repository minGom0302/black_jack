<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Game">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_game"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/game_img_back01"
            android:layout_width="85dp"
            android:layout_height="130dp"

            android:visibility="gone"/>
        <ImageView
            android:id="@+id/game_img_back02"
            android:layout_width="85dp"
            android:layout_height="130dp"
            android:src="@drawable/back"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/game_img_back03"
            android:layout_width="85dp"
            android:layout_height="130dp"
            android:src="@drawable/back"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/game_img_back04"
            android:layout_width="85dp"
            android:layout_height="130dp"
            android:src="@drawable/back"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/game_img_back05"
            android:layout_width="85dp"
            android:layout_height="130dp"
            android:src="@drawable/back"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_goBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="go"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_stopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="stop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 합 : "
                android:textSize="16sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/game_countTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/game_myCard01"
                android:layout_width="85dp"
                android:layout_height="130dp"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/game_myCard02"
                android:layout_width="85dp"
                android:layout_height="130dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/game_myCard03"
                android:layout_width="85dp"
                android:layout_height="130dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/game_myCard04"
                android:layout_width="85dp"
                android:layout_height="130dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/game_myCard05"
                android:layout_width="85dp"
                android:layout_height="130dp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/game_cardBack"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="130dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/game_cardBack01"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="130dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/game_cardBack02"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="130dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/game_cardBack03"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="130dp"
        android:src="@drawable/back"/>
    <ImageView
        android:id="@+id/game_cardBack04"
        android:layout_gravity="center"
        android:layout_width="85dp"
        android:layout_height="130dp"
        android:src="@drawable/back"/>
</FrameLayout>